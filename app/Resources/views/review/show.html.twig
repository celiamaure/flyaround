{% extends 'base.html.twig' %}

{% block body %}
    <h1>Review</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>text</th>
            <td>{{ review.text }}</td>
        </tr>
        <tr>
            <th>publication date</th>
            <td>{{ review.publicationDate }}</td>
        </tr>
        <tr>
            <th>user rated id</th>
            <td>{{ review.user_rated_id }}</td>
        </tr>
        <tr>
            <th>review_author_id</th>
            <td>{{ review.review_author_id }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('review_index', { 'id': review.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}